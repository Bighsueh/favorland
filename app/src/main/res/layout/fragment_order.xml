<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context=".OrderFragment"
        android:background="#FFFFFF">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#f2f2f2">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:text="桌號："
                        android:textColor="#000000"
                        android:gravity="center"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:id="@+id/ed_task"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:text="人數："
                        android:textColor="#000000"
                        android:gravity="center"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:id="@+id/ed_people"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcv_order"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="折底："
                        android:textColor="#000000"
                        android:gravity=""
                        android:textSize="16dp"
                        android:background="#00000000"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:gravity="center"
                        android:id="@+id/ed_discount"
                        android:textSize="16dp"
                        android:background="@null"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="小計："
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:background="#00000000"
                        android:gravity=""/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:id="@+id/tv_total"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:background="@null"/>
            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:id="@+id/rcv_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    >

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcv_dishes"
                    android:layout_below="@+id/rcv_item"
                    >

            </androidx.recyclerview.widget.RecyclerView>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <Button
                    android:layout_width="115dp"
                    android:layout_height="60dp"
                    android:text="結帳"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_insert"/>
            </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
